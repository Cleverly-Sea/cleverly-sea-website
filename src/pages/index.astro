<style>
	/* ‚îÄ‚îÄ Reset body layout for full-width sections ‚îÄ‚îÄ */
	:global(body) {
		background: #fff;
		background-size: unset;
	}
	:global(main) {
		width: unset;
		max-width: unset;
		margin: unset;
		padding: unset;
	}

	/* ‚îÄ‚îÄ Hero ‚îÄ‚îÄ */
	.hero {
		position: relative;
		height: 520px;
		display: flex;
		align-items: center;
		justify-content: center;
		overflow: hidden;
		text-align: center;
	}
	.hero-bg {
		position: absolute;
		inset: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
		border-radius: 0;
	}
	.hero-overlay {
		position: absolute;
		inset: 0;
		background: rgba(10, 35, 66, 0.62);
		z-index: 1;
	}
	.hero-content {
		position: relative;
		z-index: 2;
		color: #fff;
		padding: 2em;
		max-width: 760px;
	}
	.hero-content h1 {
		color: #fff;
		font-size: 2.6em;
		line-height: 1.15;
		margin-bottom: 0.4em;
		text-shadow: 0 2px 8px rgba(0,0,0,0.4);
	}
	.hero-tagline {
		font-size: 1.15em;
		color: rgba(255, 255, 255, 0.88);
		margin-bottom: 1.5em;
		line-height: 1.6;
	}
	.btn-primary {
		display: inline-block;
		background: #00b4d8;
		color: #fff;
		padding: 0.75em 2.2em;
		border-radius: 4px;
		text-decoration: none;
		font-weight: 700;
		font-size: 1em;
		transition: background 0.2s;
	}
	.btn-primary:hover {
		background: #0096c7;
		color: #fff;
	}

	/* ‚îÄ‚îÄ Sections ‚îÄ‚îÄ */
	.section {
		padding: 5em 1.5em;
	}
	.section-light {
		background: #fff;
		color: #222;
	}
	.section-dark {
		background: #0a2342;
		color: rgba(255, 255, 255, 0.88);
	}
	.section-dark h2,
	.section-dark h3 {
		color: #fff;
	}
	.section-accent {
		background: #00b4d8;
		color: #fff;
	}
	.container {
		max-width: 1100px;
		margin: 0 auto;
	}
	.section-title {
		text-align: center;
		margin-bottom: 0.4em;
		font-size: 2em;
	}
	.section-subtitle {
		text-align: center;
		max-width: 640px;
		margin: 0 auto 2.5em;
		font-size: 1em;
		line-height: 1.7;
		color: inherit;
		opacity: 0.8;
	}

	/* ‚îÄ‚îÄ About ‚îÄ‚îÄ */
	.about-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 3em;
		align-items: center;
	}
	.about-text h2 {
		font-size: 2em;
		margin-bottom: 0.6em;
	}
	.about-text p {
		font-size: 0.95em;
		line-height: 1.8;
		color: #444;
	}
	.about-image img {
		width: 100%;
		border-radius: 10px;
		box-shadow: 0 4px 24px rgba(0,0,0,0.12);
	}

	/* ‚îÄ‚îÄ Services ‚îÄ‚îÄ */
	.services-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2em;
	}
	.service-card {
		background: rgba(255, 255, 255, 0.06);
		border: 1px solid rgba(255, 255, 255, 0.12);
		border-radius: 10px;
		overflow: hidden;
		transition: transform 0.2s;
	}
	.service-card:hover {
		transform: translateY(-4px);
	}
	.service-img {
		width: 100%;
		height: 160px;
		object-fit: cover;
		border-radius: 0;
	}
	.service-icon {
		font-size: 1.8em;
		padding: 1em 1.25em 0.25em;
	}
	.service-card h3 {
		padding: 0 1.25em 0.4em;
		font-size: 1.1em;
	}
	.service-card p {
		padding: 0 1.25em 1.5em;
		font-size: 0.9em;
		line-height: 1.7;
		opacity: 0.8;
	}

	/* ‚îÄ‚îÄ Stats ‚îÄ‚îÄ */
	.stats-grid {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: 2em;
		text-align: center;
	}
	.stat-number {
		display: block;
		font-size: 2.8em;
		font-weight: 700;
		line-height: 1;
		margin-bottom: 0.2em;
	}
	.stat-label {
		font-size: 0.95em;
		opacity: 0.85;
	}

	/* ‚îÄ‚îÄ Team ‚îÄ‚îÄ */
	.team-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2em;
	}
	.team-card {
		text-align: center;
		padding: 1.5em;
		border: 1px solid #e8eaf0;
		border-radius: 10px;
	}
	.team-photo {
		width: 120px;
		height: 120px;
		object-fit: cover;
		border-radius: 50%;
		margin-bottom: 1em;
	}
	.team-card h4 {
		margin-bottom: 0.2em;
		font-size: 1.1em;
	}
	.team-role {
		color: #00b4d8;
		font-weight: 600;
		font-size: 0.9em;
		margin-bottom: 0.75em;
	}
	.team-bio {
		font-size: 0.875em;
		color: #555;
		line-height: 1.7;
	}

	/* ‚îÄ‚îÄ Contact ‚îÄ‚îÄ */
	.contact-grid {
		display: grid;
		grid-template-columns: 1fr 1.4fr;
		gap: 3em;
		align-items: start;
	}
	.contact-info {
		display: flex;
		flex-direction: column;
		gap: 1.75em;
	}
	.contact-item {
		display: flex;
		gap: 1em;
		align-items: flex-start;
	}
	.contact-icon {
		font-size: 1.4em;
		margin-top: 0.1em;
	}
	.contact-item strong {
		display: block;
		color: #fff;
		margin-bottom: 0.25em;
	}
	.contact-item p {
		margin: 0;
		font-size: 0.95em;
		opacity: 0.75;
		line-height: 1.5;
	}
	.contact-map img {
		width: 100%;
		border-radius: 10px;
	}

	/* ‚îÄ‚îÄ Responsive ‚îÄ‚îÄ */
	@media (max-width: 900px) {
		.about-grid,
		.contact-grid {
			grid-template-columns: 1fr;
		}
		.services-grid,
		.team-grid {
			grid-template-columns: 1fr 1fr;
		}
		.stats-grid {
			grid-template-columns: 1fr 1fr;
		}
	}
	@media (max-width: 600px) {
		.hero {
			height: 420px;
		}
		.hero-content h1 {
			font-size: 1.7em;
		}
		.services-grid,
		.team-grid {
			grid-template-columns: 1fr;
		}
		.stats-grid {
			grid-template-columns: 1fr 1fr;
		}
	}
</style>
