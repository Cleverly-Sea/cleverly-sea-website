---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<div class="brand">
			<a href="/">
				<span class="brand-icon">ðŸŒŠ</span>
				<span class="brand-name">{SITE_TITLE}</span>
			</a>
		</div>
		<div class="internal-links">
			<HeaderLink href="/#about">About</HeaderLink>
			<HeaderLink href="/#services">Services</HeaderLink>
			<HeaderLink href="/#contact">Contact</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 2em;
		background: #0a2342;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
		position: sticky;
		top: 0;
		z-index: 100;
	}
	.brand a {
		display: flex;
		align-items: center;
		gap: 0.5em;
		text-decoration: none;
	}
	.brand-icon {
		font-size: 1.5em;
	}
	.brand-name {
		color: #fff;
		font-size: 1.1em;
		font-weight: 700;
		letter-spacing: 0.02em;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		height: 64px;
	}
	nav a {
		padding: 0.5em 0.75em;
		color: rgba(255, 255, 255, 0.85);
		border-bottom: 3px solid transparent;
		text-decoration: none;
		font-size: 0.95em;
		transition: color 0.2s, border-color 0.2s;
	}
	nav a:hover,
	nav a.active {
		color: #fff;
		border-bottom-color: #00b4d8;
	}
	.internal-links {
		display: flex;
		gap: 0.25em;
	}
	@media (max-width: 600px) {
		.brand-name {
			font-size: 0.85em;
		}
		nav {
			gap: 0.5em;
		}
		nav a {
			padding: 0.5em 0.4em;
			font-size: 0.85em;
		}
	}
</style>
